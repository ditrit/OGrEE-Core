{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OGrEE Domain Schema",
    "type": "object",
    "properties": {
      "description": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "parentId": {
        "type": "string"
      },
      "category": {
        "type": "string"
      },
      "name": {
        "type": "string",
        "pattern":"^\\w(\\w|\\-)*$"
      },
      "attributes": {
        "type": "object",
        "properties": {
          "color": {
            "type" : "string",
            "$ref": "refs/types.json#/definitions/color"
          }
        }
      }
    },
    "additionalProperties":  false,
    "required": [
      "category",
      "description",
      "name",
      "attributes"
    ],
    "examples": [
      {
        "attributes": {
          "color": "00ED00"
        },
        "category": "domain",
        "description": [
          "domain"
        ],
        "name": "DEMO"
      }
    ]
  }