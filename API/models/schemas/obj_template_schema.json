        },
        {
            "slug"        : "generic-example",
            "description" : "a table",
            "category"    : "generic",
            "sizeWDHmm"   : [447, 914.5, 263.3],
            "fbxModel"    : "",
            "attributes"  : {
                "type"    : "table"
            },
            "colors"      : [],
            "components"  : [],
            "slots"       : []
        }
    ]
}