{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OGrEE Obj Template Schema",
    "type": "object",
    "required": [
        "attributes",
        "components",
        "description",
        "fbxModel",
        "sizeWDHmm",
        "slots",
        "slug",
        "category"
    ],
    "properties": {
        "attributes": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "string"
                }
              },
              "additionalProperties": false
        },
        "category": {
            "type": "string",
            "enum": [
                "rack",
                "device"
            ]
        },
        "colors": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "value"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string",
                        "$ref": "refs/types.json#/definitions/color"
                    }
                }
            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "elemPos",
                    "elemSize",
                    "labelPos",
                    "location",
                    "type"
                ],
                "properties": {
                    "attributes": {
                        "$ref": "#/$defs/attributes"
                    },
                    "color": {
                        "$ref": "#/$defs/color"
                    },
                    "elemOrient": {
                        "type": "string",
                        "enum": [
                            "horizontal",
                            "vertical",
                            ""
                        ]
                    },
                    "elemPos": {
                        "$ref": "#/$defs/elemPos"
                    },
                    "elemSize": {
                        "$ref": "#/$defs/elemSize"
                    },
                    "labelPos": {
                        "$ref": "#/$defs/labelPos"
                    },
                    "location": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    }
                }
            }
        },
        "description": {
            "type": "string"
        },
        "fbxModel": {
            "type": "string"
        },
        "sizeWDHmm": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
        },
        "slug": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        }
    },
    "if": {
        "properties": {
            "category": {
                "const": "rack"
            }
        }
    },
    "then": {
        "properties": {
            "slots": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "elemOrient",
                        "elemPos",
                        "elemSize",
                        "labelPos",
                        "location",
                        "type"
                    ],
                    "properties": {
                        "elemOrient": {
                            "type": "string",
                            "enum": [
                                "horizontal",
                                "vertical"
                            ]
                        },
                        "attributes": {
                            "$ref": "#/$defs/attributes"
                        },
                        "color": {
                            "$ref": "#/$defs/color"
                        },
                        
                        "elemPos": {
                            "$ref": "#/$defs/elemPos"
                        },
                        "elemSize": {
                            "$ref": "#/$defs/elemSize"
                        },
                        "labelPos": {
                            "$ref": "#/$defs/labelPos"
                        },
                        "location": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "else": {
        "properties": {
            "slots": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "elemPos",
                        "elemSize",
                        "labelPos",
                        "location",
                        "type"
                    ],
                    "properties": {
                        "elemOrient": {
                            "type": "string",
                            "enum": [
                                "horizontal",
                                "vertical",
                                ""
                            ]
                        },
                        "attributes": {
                            "$ref": "#/$defs/attributes"
                        },
                        "color": {
                            "$ref": "#/$defs/color"
                        },
                        
                        "elemPos": {
                            "$ref": "#/$defs/elemPos"
                        },
                        "elemSize": {
                            "$ref": "#/$defs/elemSize"
                        },
                        "labelPos": {
                            "$ref": "#/$defs/labelPos"
                        },
                        "location": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "$defs": {
        "attributes": {
            "type": "object",
            "properties": {
                "factor": {
                    "type": "string"
                }
            }
        },
        "color": {
            "type": "string",
            "pattern": "(^[0-9a-fA-F]{6}$)|(^@[a-zA-Z0-9-]+$)|(^$)"
        },
        "elemPos": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
        },
        "elemSize": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
        },
        "labelPos": {
            "type": "string",
            "enum": [
                "front",
                "rear",
                "frontrear",
                "top",
                "right",
                "left",
                "none"
            ]
        }
    },
    "examples": [
        {
            "slug": "ibm-example",
            "description": "example",
            "category": "device",
            "sizeWDHmm": [216, 659, 41],
            "fbxModel": "",
            "attributes": {
                "type": "blade",
                "vendor": "IBM",
                "model": "HC1",
                "ram order": "8,1,6, / 8,5,5,12,4,13"
            },
            "colors": [],
            "components": [
                {
                    "location": "eth2",
                    "type": "port",
                    "elemOrient": "",
                    "elemPos": [ 104, 649, 0],
                    "elemSize": [14, 11, 11],
                    "mandatory": "yes",
                    "labelPos": "front",
                    "color": "ffc0cb",
                    "attributes": {
                        "factor": "rj45"
                    }
                }
            ],
            "slots": [
                {
                    "location": "cpu1",
                    "type": "processor",
                    "elemOrient": "",
                    "elemPos": [68, 343, 0],
                    "elemSize": [97, 97, 30],
                    "mandatory": "yes",
                    "labelPos": "top",
                    "color": "ffff00",
                    "attributes": {
                        "factor": "XXXX-R"
                    }
                }
            ]
        }
    ]
}