{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "namespace_cli": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "device": {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "category": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "title": "The attributes Schema",
      "required": [
          "type"
      ],
      "properties": {
        "type": {
            "type": "string"
        }
      }
    }
  },
  "required": [
    "domain",
    "category",
    "name",
    "attributes"
  ],
  "examples": [
    {
      "domain": "DemoA",
      "category": "application",
      "attributes" : {
          "type" : "kubernetes",
          "device": [
            "BASIC.A.R1.A02.chassis01.bladeA",
            "BASIC.A.R1.A02.chassis01.bladeB",
            "BASIC.A.R1.A02.chassis01.bladeC"
        ]
      },
      "name": "kubernetes-cluster",
      "id": "kubernetes-cluster"
    }
  ]    

}