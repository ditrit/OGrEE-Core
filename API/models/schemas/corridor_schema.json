{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OGrEE Corridor Schema",
    "type": "object",
    "$ref": "refs/base.json",
    "properties": {
        "attributes": {
            "type": "object",
            "required": [
                "temperature",
                "height",
                "heightUnit",
                "rotation",
                "posXYUnit",
                "posXYZ",
                "size",
                "sizeUnit"
            ],
            "properties": {
                "height": {
                    "$ref": "refs/types.json#/definitions/float"
                },
                "heightUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "rotation": {
                    "$ref": "refs/types.json#/definitions/vector3"
                },
                "posXYZ": {
                    "$ref": "refs/types.json#/definitions/vector3"
                },
                "posXYUnit": {
                    "type": "string",
                    "enum": ["m", "t", "f"]
                },
                "posZUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "size": {
                    "$ref": "refs/types.json#/definitions/vector2"
                },
                "sizeUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "temperature": {
                    "type": "string",
                    "enum": [
                        "cold",
                        "warm"
                    ]
                }
            }
        }
    },
    "examples": [
        {
            "attributes": {
                "content": "B11,C19",
                "temperature": "cold",
                "height": "47",
                "heightUnit": "cm",
                "rotation": "[45, 45, 45]",
                "posXYUnit": "m",
                "posXYZ": "[4.6666666666667,  -2, 0]",
                "size": "[80, 100.532442]",
                "sizeUnit": "cm"
            },
            "category": "corridor",
            "description": "corridor",
            "domain": "domainTest",
            "name": "GCorridor",
            "parentId": "Site.Bldg.Rooom"
        }
    ]
}