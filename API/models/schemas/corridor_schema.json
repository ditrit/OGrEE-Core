{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OGrEE Corridor Schema",
    "type": "object",
    "$ref": "refs/base.json",
    "properties": {
        "attributes": {
            "type": "object",
            "required": [
                "temperature",
                "height",
                "heightUnit",
                "rotation",
                "posXYUnit",
                "posXYZ",
                "size",
                "sizeUnit"
            ],
            "properties": {
                "height": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/float"
                },
                "heightUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "rotation": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/vector3"
                },
                "posXYZ": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/vector3"
                },
                "posXYUnit": {
                    "type": "string",
                    "enum": ["m", "t", "f"]
                },
                "posZUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "size": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/vector2"
                },
                "sizeUnit": {
                    "type": "string",
                    "$ref": "refs/types.json#/definitions/metricImperialUnit"
                },
                "temperature": {
                    "type": "string",
                    "enum": [
                        "cold",
                        "warm"
                    ]
                }
            }
        }
    },
    "examples": [
        {
            "attributes": {
                "content": "B11,C19",
                "temperature": "cold",
                "height": "47",
                "heightUnit": "cm",
                "rotation": "{\"x\":45 ,\"y\":45 ,\"z\":45}",
                "posXYUnit": "m",
                "posXYZ": "{\"x\":4.6666666666667 ,\"y\": -2 ,\"z\":0}",
                "size": "{\"x\":80 ,\"y\":100.532442}",
                "sizeUnit": "cm"
            },
            "category": "corridor",
            "description": [],
            "domain": "domainTest",
            "name": "GCorridor",
            "parentId": "Site.Bldg.Rooom"
        }
    ]
}