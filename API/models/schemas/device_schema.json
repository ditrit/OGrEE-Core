{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OGrEE Device Schema",
  "$ref": "refs/base.json",
  "type": "object",
    "properties": {
      "attributes": {
        "type": "object",
        "properties": {
          "fbxModel": {
            "type": "string"
          },
          "height": {
            "$ref": "refs/types.json#/definitions/float"
          },
          "heightUnit": {
            "type": "string",
            "$ref": "refs/types.json#/definitions/metricImperialUUnit"
          },
          "orientation": {
            "type": "string",
            "enum": ["front", "rear", "frontflipped", "rearflipped"]
          },
          "size": {
            "format": "vector2"
          },
          "sizeUnit": {
            "type": "string",
            "$ref": "refs/types.json#/definitions/metricImperialUnit"
          },
          "slot": {
            "type": "array",
            "items": {
                "type": "string"
            }
          },
          "template": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "posU": {
            "$ref": "refs/types.json#/definitions/float"
          },
          "sizeU": {
            "$ref": "refs/types.json#/definitions/float"
          },
          "color": {
            "type": "string",
            "$ref": "refs/types.json#/definitions/color"
          },
          "invertOffset": {
            "type": "boolean"
          }
        },
        "patternProperties": {
          "^temperature_[0-9a-zA-Z_-]+$": {
            "$ref": "refs/types.json#/definitions/float"
          }
        },
        "required": [
          "height",
          "heightUnit",
          "orientation",
          "size",
          "sizeUnit"
        ]
      }
    },
    "examples": [
      {
      "attributes": {
          "TDP": "",
          "TDPmax": "",
          "fbxModel": "https://github.com/test.fbx",
          "height": 40.1,
          "heightUnit": "mm",
          "model": "TNF2LTX",
          "orientation": "front",
          "partNumber": "0303XXXX",
          "size": [388.4, 205.9],
          "sizeUnit": "mm",
          "template": "huawei-xxxxxx",
          "type": "blade",
          "vendor": "Huawei",
          "weightKg": 1.81
      },
      "category": "device",
      "description": "Optix XXX - Dual 9-Port Wavelength Selective Switching Board",
      "domain": "domainTest",
      "name": "deviceName",
      "parentId": "site.bldg.room.rack"
    }
  ]
}