{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OGrEE Layer Schema",
  "type": "object",
  "properties": {
    "slug": {
      "type": "string",
      "$ref": "refs/types.json#/definitions/slug"
    },
    "filter": {
      "type": "string"
    },
    "applicability": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "slug",
    "filter",
    "applicability"
  ],
  "examples": [
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": ""
    },
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": "BASIC.A.R1"
    },
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": "BASIC.A.R1.*"
    },
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": "*"
    },
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": "BASIC.A.R*"
    },
    {
      "slug": "racks",
      "filter": "category = rack",
      "applicability": "BASIC.A.**"
    }
  ]
}